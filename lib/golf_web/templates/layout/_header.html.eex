<div class="navbar is-link">
  <div class="container">
    <div class="navbar-brand">
      <%= link to: page_path(@conn, :index), class: "navbar-item" do %>
        <img src="<%= static_path(@conn, "/images/sgl-logo-white.png") %>" width="178">
      <% end %>
      <div class="navbar-burger burger" data-target="navMenu">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </div>

    <div id="navMenu" class="navbar-menu">
      <div class="navbar-start">
        <%= if @conn.assigns[:user] do %>
          <%= link "Players", to: page_path(@conn, :index), class: "navbar-item" %>
          <%= link "Games", to: page_path(@conn, :index), class: "navbar-item" %>
          <%= link "Reports", to: page_path(@conn, :index), class: "navbar-item" %>
        <% end %>
      </div>
    </div>

    <div class="navbar-menu">
        <div class="navbar-item">
          <%= if @conn.assigns[:user] do %>
            <div class="navbar-end">
              <%= link "Sign out", to: auth_path(@conn, :delete), class: "button is-danger" %>
            </div>
          <% else %>
            <%= link to: auth_path(@conn, :request, "google", scope: "email profile"), class: "button is-primary" do %>
              <span class="icon">
                <img src="<%= static_path(@conn, "/images/google-noborder.svg") %>">
              </span>
              <span>Sign in</span>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
